<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EgoPrimer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EgoPrimer.Views.HealthSceneToolPanel"
             x:DataType="vm:HealthSceneModel">
    <StackPanel>
        <Button Command="{Binding AddBodyWeightCommand}">记录体重</Button>
        <Button Command="{Binding ModifyBodyWeightCommand}">修改记录</Button>
        <Button Command="{Binding RemoveBodyWeightCommand}">移除记录</Button>
    </StackPanel>
</UserControl>
